{
  "name": "graphite",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:ui\" \"npm run dev:host\" \"npm run dev:proxy\"",
    "dev:no-host": "concurrently \"npm run dev:ui\" \"npm run dev:proxy\"",
    "dev:ui": "vite",
    "dev:host": "cd host ; cargo run",
    "dev:proxy": "node proxy/server.js",
    "build:host": "cd host ; cargo build --release",
    "build": "npm run build:host",
    "preview": "vite preview",
    "check:svelte": "svelte-check --tsconfig ./tsconfig.json",
    "check:rust": "cd host ; cargo check",
    "check": "npm run check:rust && npm run check:svelte",
    "start:host": "cd host && ./target/release/graphite-host",
    "start:proxy": "node proxy/server.js",
    "start:ui": "npm run preview --port 5173",
    "start": "concurrently \"npm run start:ui\" \"npm run start:host\" \"npm run start:proxy\"",
    "ez-boot": "npm i && npm run build && npm run start"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@tsconfig/svelte": "^5.0.5",
    "@types/node": "^24.7.2",
    "svelte": "^5.39.12",
    "svelte-check": "^4.3.3",
    "typescript": "~5.9.3",
    "vite": "^7.1.9"
  },
  "dependencies": {
    "@fastify/static": "^8.2.0",
    "@mercuryworkshop/bare-mux": "^2.1.7",
    "@mercuryworkshop/epoxy-transport": "^2.1.28",
    "@mercuryworkshop/scramjet": "https://github.com/MercuryWorkshop/scramjet/releases/download/latest/mercuryworkshop-scramjet-2.0.0-alpha.tgz",
    "@mercuryworkshop/wisp-js": "^0.3.3",
    "ws": "^8.18.3",
    "axios": "^1.12.2",
    "cheerio": "^1.1.2",
    "concurrently": "^9.2.1",
    "express": "^5.1.0",
    "fastify": "^5.6.1",
    "phosphor-svelte": "^3.0.1",
    "wisp-server-node": "^1.1.7"
  },
  "main": "svelte.config.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GraphiteTechnologies/Marble.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/GraphiteTechnologies/Marble/issues"
  },
  "homepage": "https://github.com/GraphiteTechnologies/Marble#readme"
}
